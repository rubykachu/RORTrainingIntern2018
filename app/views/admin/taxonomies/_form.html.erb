<%= form_with model: @taxonomy, local: true, class: 'form-horizontal', html: { role: 'form'} do |form| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', placeholder: 'Name', id: 'from_slug', onkeyup: 'ChangeToSlug()' %>
      <%= msg_form_errors @taxonomy, :name %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Slug</label>
    <div class="col-sm-10">
      <%= form.text_field :slug, class: 'form-control', placeholder: 'Code', id: 'to_slug'  %>
      <%= msg_form_errors @taxonomy, :slug %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Position</label>
    <div class="col-sm-10">
      <%= form.number_field :position, min: 0, class: 'form-control', placeholder: 'Position'  %>
      <%= msg_form_errors @taxonomy, :position %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit yield(:submit_text).presence || 'Submit', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
