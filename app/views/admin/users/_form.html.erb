<%= form_with model: @user, local: true, class: 'form-horizontal', html: { role: 'form'} do |form| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <%= form.email_field :email, class: 'form-control', placeholder: 'Email'  %>
      <%= msg_form_errors @user, :email %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <%= form.password_field :password, class: 'form-control', placeholder: 'Password'  %>
      <%= msg_form_errors @user, :password %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Confirm password</label>
    <div class="col-sm-10">
      <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Password'  %>
      <%= msg_form_errors @user, :password_confirmation %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <label>
        <%= form.check_box :is_admin %> Set is admin
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit yield(:submit_text).presence || 'Submit', class: 'btn btn-primary' %>

      <%#= form.submit yield(:submit_text), class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
