<h6>Sign In</h6>
<%= render 'admin/sessions/component/social' %>

<%= form_with model: @user, url: login_path, local: false do |f| %>
  <%= f.text_field :email, class: 'form-control', placeholder: 'E-mail' %>
  <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  <label>
    <%= f.check_box :remember_digest %> Remember me
  </label>
  <%= content_tag :div, class: 'action' do %>
    <%= f.submit 'Login', class: 'btn btn-primary signup' %>
  <% end %>
<% end %>
