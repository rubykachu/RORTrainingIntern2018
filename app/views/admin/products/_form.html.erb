<% provide :css, link_assets('javascripts/form-helpers/bootstrap-formhelpers.css') %>
<% provide :js, link_assets('javascripts/form-helpers/bootstrap-formhelpers.js') %>

<%= form_with model: @product, local: true, class: 'form-horizontal', html: { role: 'form'} do |form| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">SKU</label>
    <div class="col-sm-10">
      <%= form.text_field :code, class: 'form-control', placeholder: 'SKU' %>
      <%= msg_form_errors @product, :code %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', placeholder: 'Name', id: 'from_slug', onkeyup: 'ChangeToSlug()' %>
      <%= msg_form_errors @product, :name %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Slug</label>
    <div class="col-sm-10">
      <%= form.text_field :slug, class: 'form-control', placeholder: 'Slug', id: 'to_slug' %>
      <%= msg_form_errors @product, :slug %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      <%= form.number_field :price, value: @product.price, class: 'form-control', placeholder: 'Price', min: 0 %>
      <%= msg_form_errors @product, :price %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Quantity</label>
    <div class="col-sm-10">
      <%= form.number_field :quantity, class: 'form-control', placeholder: 'Quantity', min: 0 %>
      <%= msg_form_errors @product, :quantity %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Available on</label>
    <div class="col-sm-10">
      <div class="bfh-datepicker" data-format="y-m-d" data-date="today"></div>
      <%= form.hidden_field :available_on, class: 'form-control', placeholder: 'Available on' %>
      <%= msg_form_errors @product, :available_on %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Discontinue on</label>
    <div class="col-sm-10">
      <div class="bfh-datepicker" data-format="y-m-d" data-date="" data-min="today"></div>
      <%= form.hidden_field :discontinue_on, class: 'form-control', placeholder: 'Discontinue on' %>
      <%= msg_form_errors @product, :discontinue_on %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit yield(:submit_text).presence || 'Submit', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
